{
  "compilerOptions": {
    "module": "ESNext",
    "target": "es2019",
    "sourceMap": false,
    "declaration": true,
    "outDir": "./dist",
    "moduleResolution": "node",
    "strictNullChecks": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true
  },
  "exclude": ["node_modules"],
  "include": ["./src/**/*.ts"]
}
